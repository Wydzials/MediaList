{{>partials/header}}

<div class="row justify-content-center">
    <div class="col-4">
        <h3>Add a new game</h3>
        <form action="/user/games/add" method="post">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" name="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Priority</label>
                <input type="number" class="form-control" name="priority" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Platform</label>
                <input type="text" class="form-control" name="platform" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Time in minutes</label>
                <input type="number" class="form-control" name="timeInMinutes" required>
            </div>

            <button type="submit" class="btn btn-primary">Add a new book</button>
        </form>
    </div>
</div>

{{>partials/footer}}