{{>partials/header}}

<div class="row justify-content-center">
    <div class="col-4">
        <h3>Edit movie '{{medium.title}}'</h3>
        <form action="/user/movies/edit/{{medium.id}}" method="post">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" name="title" value="{{medium.title}}" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Priority</label>
                <input type="number" class="form-control" name="priority" value="{{medium.priority}}" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Country</label>
                <input type="text" class="form-control" name="country" value="{{medium.country}}" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Time in minutes</label>
                <input type="number" class="form-control" name="timeInMinutes" value="{{medium.timeInMinutes}}" required>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

{{>partials/footer}}