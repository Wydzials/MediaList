{{>partials/header}}
<a type="button" class="btn btn-outline-primary" href="/user/books/add">Add a new book</a>
<br>
<br>
{{avg}}
<h3>Saved books:</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Time</th>
        <th scope="col">Priority</th>
        <th scope="col">Pages</th>
        <th scope="col">Created</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    {{#media}}
        <tr>
            <td>{{title}}</td>
            <td>{{getTimeFormatted}}</td>
            <td>{{priority}}</td>
            <td>{{pages}}</td>
            <td>{{created}}</td>
            <td><a href="/user/books/edit/{{id}}">Edit</a></td>
            <td><a href="/user/books/delete/{{id}}">Delete</a></td>
        </tr>
    {{/media}}
    </tbody>
</table>

